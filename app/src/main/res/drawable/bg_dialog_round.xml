<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="false" >
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_layout_back"/>
            <stroke android:color="@color/color_stroke_base" android:width="@dimen/width_stroke" />
            <corners android:radius="@dimen/angle_round_base" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_layout_back"/>
            <stroke android:color="@color/color_stroke_base" android:width="@dimen/width_stroke" />
            <corners android:radius="@dimen/angle_round_base" />
        </shape>
    </item>
</selector>