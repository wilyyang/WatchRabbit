<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bgLayoutFrontDisabled"/>
            <stroke android:color="@color/strokeColorLayout" android:width="@dimen/strokeWidth" />
            <corners android:radius="@dimen/cornerRound" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/bgLayoutFrontDisabledPressed"/>
            <stroke android:color="@color/strokeColorLayout" android:width="@dimen/strokeWidth" />
            <corners android:radius="@dimen/cornerRound" />
        </shape>
    </item>
</selector>