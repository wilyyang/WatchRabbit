<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/bg_layout_round_enabled"
    android:gravity="center"
    android:weightSum="16.2"
    android:layout_marginRight="@dimen/margin_item_scroll_space">

    <CheckBox
        android:id="@+id/check_box_item_evaluation_habbit_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.2"/>

    <ImageView
        android:id="@+id/image_view_evaluation_habbit_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/text_view_evaluation_habbit_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAlignment="center"
        android:textSize="@dimen/sp_base_s1"
        android:text="0" />

    <TextView
        android:id="@+id/text_view_record_hid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/text_view_evaluation_habbit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="습관명"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="viewStart"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/evaluation_total_group"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_base_s2" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/evaluation_result_cost"
                android:textAlignment="center"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:id="@+id/text_view_evaluation_habbit_total_result_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/evaluation_achive_rate"
                android:textAlignment="center"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:id="@+id/text_view_evaluation_habbit_total_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textSize="@dimen/sp_base_s2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/evaluation_10day_group"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_base_s2" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/evaluation_result_cost"
                android:textAlignment="center"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:id="@+id/text_view_evaluation_habbit_10day_result_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/evaluation_achive_rate"
                android:textAlignment="center"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:id="@+id/text_view_evaluation_habbit_10day_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textSize="@dimen/sp_base_s2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/evaluation_today_group"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_base_s2" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/evaluation_result_cost"
                android:textAlignment="center"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:id="@+id/text_view_evaluation_habbit_today_result_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/evaluation_achive_rate"
                android:textAlignment="center"
                android:textSize="@dimen/sp_base_s2" />

            <TextView
                android:id="@+id/text_view_evaluation_habbit_today_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textSize="@dimen/sp_base_s2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>