<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_layout_round_enabled"
    android:gravity="center"
    android:weightSum="10"
    android:layout_marginRight="@dimen/margin_item_scroll_space">

    <CheckBox
        android:id="@+id/check_box_item_alarm_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/text_view_alarm_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="Title"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_alarm_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="00:00"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_alarm_range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="40"
        android:textAlignment="viewEnd"
        android:textSize="15sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="(ë¶„)"
        android:textAlignment="viewStart"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_view_alarm_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="30"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"/>
</LinearLayout>