<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/bg_layout_round"
    android:gravity="center"
    android:weightSum="16.2"
    android:layout_marginRight="5dp">

    <CheckBox
        android:id="@+id/record_delete_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.2"/>

    <ImageView
        android:id="@+id/record_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/record_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/record_hid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="0"
        android:textAlignment="center"
        android:textSize="@dimen/spSmallText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/record_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7.5"
        android:text="00/00/00 00:00:00"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="stat"
            android:textAlignment="center"
            android:textSize="@dimen/spSoSmallText" />

        <TextView
            android:id="@+id/record_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textAlignment="center"
            android:text="2001"
            android:textSize="@dimen/spSmallText"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textAlignment="center"
            android:text="pair"
            android:textSize="@dimen/spSoSmallText"/>
        <TextView
            android:id="@+id/record_pair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textAlignment="center"
            android:text="345"
            android:textSize="@dimen/spSmallText"/>
    </LinearLayout>

</LinearLayout>