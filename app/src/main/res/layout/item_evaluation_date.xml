<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/bg_layout_round_enabled"
    android:gravity="center"
    android:weightSum="16.2"
    android:layout_marginRight="@dimen/margin_item_scroll_space">

    <CheckBox
        android:id="@+id/check_box_item_evaluation_date_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.2"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_view_evaluation_date_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/text_view_evaluation_date_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAlignment="center"
        android:textSize="@dimen/sp_base_s1"
        android:text="0" />

    <TextView
        android:id="@+id/text_view_record_hid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/text_view_evaluation_date_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="2021/01/08"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="viewStart"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:text="@string/evaluation_goal_cost"
            android:textSize="@dimen/sp_base_s2"/>

        <TextView
            android:id="@+id/text_view_evaluation_date_goal_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="0"
            android:textSize="@dimen/sp_base_s2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:text="@string/evaluation_result_cost"
            android:textSize="@dimen/sp_base_s2"/>
        <TextView
            android:id="@+id/text_view_evaluation_date_init_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="0"
            android:textSize="@dimen/sp_base_s2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:text="@string/evaluation_achive_rate"
            android:textSize="@dimen/sp_base_s2"/>

        <TextView
            android:id="@+id/text_view_evaluation_date_per_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="0"
            android:textSize="@dimen/sp_base_s2"/>
    </LinearLayout>

</LinearLayout>